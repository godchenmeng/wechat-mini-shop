.page-goods-search{
    display: block;
    overflow: hidden;
}
.page-goods-search section{
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 30px;
    background-color: #fff;
    overflow: hidden;
    width: 94vw;
    margin: 8px auto;
    height: 30px;
}
.page-goods-search section image{
    width: 20px;
    height: 20px;
    margin-right: 10px;

}
.page-goods-search section text{
    font-size: 14px;
    color: #999999;

}

.mui-bar
{
    position: fixed;
    z-index: 10;
    right: 0;
    left: 0;

    height: 88rpx;
    padding-right: 20rpx;
    padding-left: 20rpx;

    border-bottom: 0;
    background-color: #f7f7f7;
    -webkit-box-shadow: 0 0 2rpx rgba(0, 0, 0, .85);
            box-shadow: 0 0 2rpx rgba(0, 0, 0, .85);

    -webkit-backface-visibility: hidden;
            backface-visibility: hidden;
}

